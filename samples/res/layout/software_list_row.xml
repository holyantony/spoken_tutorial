<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/list_selector" >
        
    	<ImageView
            android:id="@+id/image_id"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.05" />    
            
    	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="10dip"
        android:paddingRight="5dip"
        android:onClick="getAndDisplayLanguages">
    	    <!-- Software Name-->
		    <TextView
		        android:id="@+id/soft_title"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:typeface="sans"
		        android:text="123"
		        android:textSize="18sp"
		        android:textColor="#993300"/>
		 
		    <!-- Software Tagline-->
		    <TextView
		        android:id="@+id/soft_sub_title"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		       	android:textColor="#0481ab"
		        android:textSize="16sp"
		        android:text="123"
		        android:layout_marginTop="1dip"
		        android:layout_marginRight="60dp"
		        />
    	</LinearLayout>

    	<Button
    	    android:id="@+id/download"
            android:layout_weight="0.05"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:text=""
            android:background="@drawable/download_square"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:onClick="downloadVideoZip" />
</LinearLayout>

